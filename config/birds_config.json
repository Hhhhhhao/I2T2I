{
    "name": "Image-Caption-GAN-Birds",
    "n_gpu": 1,
    
    "models": {
        "Generator":{
            "type":"ConditionalGenerator",
            "pretrain_path": "saved/Image-Caption-GAN-Birds/0312_194953/hehe.pth",
            "args":{
                "image_embed_size": 512,
                "word_embed_size": 512,
                "lstm_hidden_size":512,
                "noise_dim":100,
                "vocab_size":1044,
                "lstm_num_layers":1,
                "max_sentence_length":20
            },
            "optimizer":{
                "type":"Adam",
                "args":{
                    "lr": 4e-4,
                    "weight_decay":0
                        }
            }
        },
        "Discriminator": {
            "type": "Evaluator",
            "pretrain_path": "saved/Image-Caption-GAN-Birds/0312_194953/hehe.pth",
            "args": {
                "word_embed_size": 512,
                "sentence_embed_size": 512,
                "lstm_hidden_size": 512,
                "vocab_size": 1044,
                "lstm_num_layers": 1
            },
            "optimizer":{
                "type":"Adam",
                "args":{
                    "lr": 2e-4,
                    "weight_decay":0
                        }
        }
    }},

    "train_data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "data/",
            "dataset_name":"birds",
            "which_set": "train",
            "image_size":256,
            "batch_size":16,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "data/",
            "dataset_name":"birds",
            "which_set": "valid",
            "image_size":256,
            "batch_size":16,
            "num_workers": 0
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "trainer": {
        "epochs": 50,
        "pretrain_generator_epochs":2,
        "pretrain_discriminator_epochs":1,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": 2,
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
