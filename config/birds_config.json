{
    "name": "Show-and-Tell-Birds",
    "n_gpu": 1,
    
    "arch": {
        "type": "ImageCaptionModel",
        "args": {
            "image_embed_size":512,
            "word_embed_size": 512,
            "lstm_hidden_size":1024,
            "vocab_size":1044
        }
    },
    "train_data_loader": {
        "type": "CaptionDataLoader",
        "args":{
            "data_dir": "data/",
            "dataset_name":"birds",
            "which_set": "train",
            "image_size":256,
            "batch_size":64,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "CaptionDataLoader",
        "args":{
            "data_dir": "data/",
            "dataset_name":"birds",
            "which_set": "valid",
            "image_size":256,
            "batch_size": 1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 1e-5,
            "amsgrad": false
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args":{
        "step_size": 2,
        "gamma": 0.5
    }},
    "trainer": {
        "epochs": 20,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 3,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
