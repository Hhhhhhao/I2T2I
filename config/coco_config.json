{
    "name": "HDGAN-CoCo",
    "n_gpu": 1,

    "models": {
        "Generator":{
            "type":"HDGANGenerator",
            "args":{
                "text_embed_dim": 1024,
                "ca_code_dim": 128,
                "noise_dim":100,
                "num_resblock":1,
                "side_output_at":[64, 128, 256]
            },
            "optimizer":{
                "type":"Adam",
                "args":{
                    "lr": 4e-4,
                    "weight_decay":0
                        }
            }
        },
        "Discriminator": {
            "type":"HDGANDiscriminator",
            "args":{
                "text_embed_dim": 1024,
                "ca_code_dim": 128,
                "side_output_at":[64, 128, 256]
            },
            "optimizer":{
                "type":"Adam",
                "args":{
                    "lr": 2e-4,
                    "weight_decay":0
                        }
        }
    }},

    "train_data_loader": {
        "type": "COCOTextImageDataLoader",
        "args":{
            "data_dir": "data/coco/",
            "which_set": "train",
            "image_size":256,
            "batch_size":16,
            "num_workers": 0,
            "validation_split":0.05
        }
    },
    "valid_data_loader": {
        "type": "COCOTextImageDataLoader",
        "args":{
            "data_dir": "data/coco/",
            "which_set": "valid",
            "image_size":256,
            "batch_size": 16,
            "num_workers": 0
        }
    },
    "trainer": {
        "epochs": 400,
        "KL_coe":4,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": 2,
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}