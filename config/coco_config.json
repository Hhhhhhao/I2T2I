{
    "name": "Show-and-Tell-CoCo",
    "n_gpu": 1,

    "arch": {
        "type": "ImageCaptionModel",
        "args": {
            "image_encode_size":4,
            "image_embed_size":512,
            "word_embed_size": 512,
            "lstm_hidden_size":1024,
            "vocab_size":11502
        }
    },
    "train_data_loader": {
        "type": "COCOCaptionDataLoader",
        "args":{
            "data_dir": "/home/s1786991/I2T2I/data/coco/",
            "which_set": "train",
            "image_size":128,
            "batch_size":128,
            "validation_split":0.05,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "COCOCaptionDataLoader",
        "args":{
            "data_dir": "/home/s1786991/I2T2I/data/coco/",
            "which_set": "val",
            "image_size":128,
            "batch_size": 1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args":{
        "step_size": 2,
        "gamma": 0.5
    }},
    "trainer": {
        "epochs": 30,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 3,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
