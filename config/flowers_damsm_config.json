{
    "name": "Deep-Attentional-Multimodal-Similarity-Flowers",
    "n_gpu": 8,

    "rnn_arch": {
        "type": "DAMSM_RNN_Encoder",
        "args": {
            "vocab_size":1302,
            "word_embed_size":256,
            "lstm_hidden_size":256
        }
    },
    "cnn_arch": {
        "type": "DAMSM_CNN_Encoder",
        "args": {
            "embedding_size":256
        }
    },
    "train_data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "data/",
            "dataset_name":"flowers",
            "which_set": "train",
            "image_size":256,
            "batch_size":32,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "data/",
            "dataset_name":"flowers",
            "which_set": "valid",
            "image_size":256,
            "batch_size": 32,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.002,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "gamma_1": 4.0,
        "gamma_2": 5.0,
        "gamma_3": 10.0,
        "clip_grad":0.25,

        "monitor": "min val_loss",
        "early_stop": 2,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
