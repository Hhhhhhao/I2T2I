{
    "name": "Image-Caption-GAN-Flowers",
    "n_gpu": 8,

    "models": {
        "Generator":{
            "type":"ConditionalGenerator",
            "pretrain_path": "/home/s1786991/I2T2I/saved/Show-and-Tell-Flowers/hehe",
            "args":{
                "image_embed_size": 512,
                "word_embed_size": 512,
                "lstm_hidden_size":1024,
                "noise_dim":100,
                "vocab_size":1302,
                "lstm_num_layers":1,
                "max_sentence_length":20
            },
            "optimizer":{
                "type":"Adam",
                "args":{
                    "lr": 4e-4,
                    "weight_decay":0
                        }
            }
        },
        "Discriminator": {
            "type": "Evaluator",
            "pretrain_path": "/home/s1786991/I2T2I/saved/Image-Caption-Gan-Birds/discriminator/",
            "args": {
                "image_embed_size": 512,
                "word_embed_size": 512,
                "sentence_embed_size": 512,
                "lstm_hidden_size": 1024,
                "vocab_size": 1302,
                "lstm_num_layers": 1
            },
            "optimizer":{
                "type":"Adam",
                "args":{
                    "lr": 2e-4,
                    "weight_decay":0
                        }
        }
    }},

    "train_data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "data/",
            "dataset_name":"flowers",
            "which_set": "train",
            "image_size":256,
            "batch_size":32,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "data/",
            "dataset_name":"flowers",
            "which_set": "valid",
            "image_size":256,
            "batch_size":8,
            "num_workers": 0
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "trainer": {
        "epochs": 50,
        "pretrain_generator_epochs":4,
        "pretrain_discriminator_epochs":2,
        "lambda_1": 0.0,
        "lambda_2": 1.0,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": 2,
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
