{
    "name": "Image-Caption-GAN-Flowers",
    "n_gpu": 1,

    "models": {
        "Generator":{
            "type":"ConditionalGenerator",
            "args":{
                "image_embed_size": 512,
                "word_embed_size": 512,
                "lstm_hidden_size":1024,
                "noise_dim":128,
                "vocab_size":1302,
                "lstm_num_layers":1,
                "max_sentence_length":20
            },
            "optimizer":{
                "type":"Adam",
                "args":{
                    "lr": 4e-4,
                    "weight_decay":0
                        }
            }
        },
        "Discriminator": {
            "type": "Evaluator",
            "args": {
                "image_embed_size": 512,
                "word_embed_size": 512,
                "sentence_embed_size": 512,
                "lstm_hidden_size": 1024,
                "vocab_size": 1273,
                "lstm_num_layers": 1
            },
            "optimizer":{
                "type":"Adam",
                "args":{
                    "lr": 2e-4,
                    "weight_decay":0
                        }
        }
    }},

    "train_data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "/Users/leon/Projects/I2T2I/data/",
            "dataset_name":"flowers",
            "which_set": "train",
            "image_size":256,
            "batch_size":128,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "/Users/leon/Projects/I2T2I/data/",
            "dataset_name":"flowers",
            "which_set": "valid",
            "image_size":256,
            "batch_size": 1,
            "num_workers": 0
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "trainer": {
        "epochs": 50,
        "generator_pre_train_epochs":2,
        "discriminator_pre_train_epochs":1,
        "lambda_1": 0,
        "lambda_2": 1,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min generator_val_loss",
        "early_stop": 2,
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}