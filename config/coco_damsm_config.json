{
    "name": "Deep-Attentional-Multimodal-Similarity-CoCo",
    "n_gpu": 1,

    "arch": {
        "type": "DAMSM",
        "args": {
            "vocab_size":11502,
            "word_embed_size":512,
            "embedding_size":1024
        }
    },
    "train_data_loader": {
        "type": "COCOCaptionDataLoader",
        "args":{
            "data_dir": "/home/s1786991/I2T2I/data/coco/",
            "which_set": "train",
            "image_size":256,
            "batch_size": 32,
            "validation_split":0.05,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "COCOCaptionDataLoader",
        "args":{
            "data_dir": "/home/s1786991/I2T2I/data/coco/",
            "which_set": "val",
            "image_size":256,
            "batch_size": 1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.002,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "gamma_1": 4.0,
        "gamma_2": 5.0,
        "gamma_3": 10.0,
        "clip_grad":0.25,

        "monitor": "min val_loss",
        "early_stop": 2,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
