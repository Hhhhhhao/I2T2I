{
    "name": "Show-and-Tell",
    "n_gpu": 1,
    
    "arch": {
        "type": "ImageCaptionModel",
        "args": {
            "image_size":256,
            "image_embed_size":256,
            "word_embed_size": 256,
            "lstm_hidden_size":512,
            "vocab_size":10330
        }
    },
    "train_data_loader": {
        "type": "COCOCaptionDataLoader",
        "args":{
            "data_dir": "/Users/leon/Projects/I2T2I/data/coco/",
            "which_set": "train",
            "image_size":256,
            "batch_size": 32,
            "num_workers": 2
        }
    },
    "valid_data_loader": {
        "type": "COCOCaptionDataLoader",
        "args":{
            "data_dir": "/Users/leon/Projects/I2T2I/data/coco/",
            "which_set": "val",
            "image_size":256,
            "batch_size": 1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 2e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": ["bleu4"],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
