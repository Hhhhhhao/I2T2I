{
    "name": "Show-and-Tell-Flowers",
    "n_gpu": 1,

    "arch": {
        "type": "ImageCaptionModel",
        "args": {
            "image_size":256,
            "image_encode_size":4,
            "image_embed_size":256,
            "word_embed_size": 256,
            "lstm_hidden_size":512,
            "vocab_size":1143
        }
    },
    "train_data_loader": {
        "type": "CaptionDataLoader",
        "args":{
            "data_dir": "/Users/leon/Projects/I2T2I/data/",
            "dataset_name":"flowers",
            "which_set": "train",
            "image_size":256,
            "batch_size": 32,
            "num_workers": 0
        }
    },
    "valid_data_loader": {
        "type": "CaptionDataLoader",
        "args":{
            "data_dir": "/Users/leon/Projects/I2T2I/data/",
            "dataset_name":"flowers",
            "which_set": "valid",
            "image_size":256,
            "batch_size": 1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 2e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 3,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
